@using NuGetDashboard.Models;
@model ThresholdViewModel

@{
    ViewBag.Title = "Edit";
}
<div class="page secondary with-sidebar">
<div class="page-header">
    <div class="page-header-content" id="headercontent">
        <h1 id="title">Threshold<small>Edit</small></h1>
        <a href="/" id="backbutton" class=" back-button big page-back"></a>
    </div>
</div>
</div>

<div style="width:800px;" class="fg-color-darken" id="Edit">
<form action="/Threshold/Edit" method="post">
        <table class="hovered">
            <tbody>
                <tr>
                    <td>Threshold Name</td>
                    <td><input type="text" name="ID" value="@Model.ID"></td>
                </tr>
                <tr>
                    <td>Threshold Type</td>
                    <td><input type="text" name="Type" value="@Model.Type"></td>
                </tr>
                <tr>
                    <td>Standard Value</td>
                    <td><input type="text" name="standard" value="@Model.standard"></td>
                </tr>
                <tr>
                    <td>Current Value</td>
                    <td><input type="text" name="current" value="@Model.current"></td>
                </tr>
            </tbody>
        </table>
<input type="submit" value="Save" />
</form>    
</div>